<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Efecto de sombra -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" /> <!-- Radio de las esquinas -->
            <solid android:color="@android:color/transparent" /> <!-- Color de fondo transparente -->
            <stroke
                android:width="1dp"
                android:color="#30000000" /> <!-- Color y ancho de la sombra -->
        </shape>
    </item>
    <!-- Fondo de la tarjeta con esquinas redondeadas -->
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" /> <!-- Radio de las esquinas -->
            <solid android:color="#80000000" /> <!-- Fondo rojo semitransparente -->
        </shape>
    </item>
</layer-list>
